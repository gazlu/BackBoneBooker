@{
    ViewBag.Title = "ValidForm";
}

<div class="row">
    <form id="formManageRooms" data-valsec="main">
        <div class="span12">
            <h2>Manage your rooms</h2>
        </div>
        <div class="span12">
            <div class="span3">
                <div class="control-group">
                    <label class="control-label" for="Number">Number</label>
                    <div class="controls">
                        <input type="hidden" name="Id" id="Id" value="0" />
                        <input type="text" class="input-large" data-req="true" id="Number" data-valsec="main" name="Number" />
                        <p class="help-block">Number of the Room</p>
                    </div>
                </div>
            </div>
            <div class="span3">
                <div class="control-group">
                    <label class="control-label" for="Name">Name</label>
                    <div class="controls">
                        <input type="text" class="input-large" data-req="true" valdata="alnum" data-valsec="main" id="Name" name="Name" />
                        <p class="help-block">Name of the Room</p>
                    </div>
                </div>
            </div>
            <div class="span3">
                <div class="control-group">
                    <label class="control-label" for="Capacity">Capacity</label>
                    <div class="controls">
                        <input type="number" class="input-large" data-req="true" valdata="num" data-valsec="main" id="Capacity" name="Capacity" />
                        <p class="help-block">Capacity of the Room</p>
                    </div>
                </div>
            </div>
            <div class="span3">
                <div class="control-group">
                    <label class="control-label" for="Projector">Projector</label>
                    <div class="controls">
                        <label class="checkbox">
                            <input type="checkbox" id="Projector" name="Projector" value="true" />
                            Room with Projector
                        </label>
                        <p class="help-block">Check if there is a projector in the Room</p>
                    </div>
                </div>
            </div>
            <div class="span3">
                <div class="control-group">
                    <label class="control-label" for="Board">Board</label>
                    <div class="controls">
                        <label class="checkbox">
                            <input type="checkbox" id="Board" name="Board" value="true" />
                            Room with Board
                        </label>
                        <p class="help-block">Check if there is a Board in the Room</p>
                    </div>
                </div>
            </div>

            <div class="span3">
                <div class="control-group">
                    <label class="control-label" for="Floor">Floor</label>
                    <div class="controls">
                        <select name="Floor" id="Floor" data-req="true" data-valsec="main" >
                            <option value="0">--Select Floor--</option>
                            @for (int i = 1; i < 11; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                        <p class="help-block">Check if there is a Board in the Room</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="reset" class="btn">Cancel</button>
        </div>
    </form>
</div>
@section Scripts{
    <script src="~/Contents/bootstrap/js/boot-validate.js"></script>
    <script>
        console.log($('#formManageRooms').validForm());
    </script>
}